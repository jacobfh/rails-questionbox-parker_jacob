<p id="notice"><%= notice %></p>

<h1><%= current_user %>'s Questions:</h1>

<table>
  <thead>
  <% if @user.image.attached? %>
          <p>
            <strong>Image:</strong>
            <%= image_tag @user.image %>
          </p>
        <% end %>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myquestions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>
        <td><%= link_to 'Show', api_v1_question_path(question)%></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_api_v1_question_path(question) %></td>
        <td><%= link_to 'Destroy', api_v1_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit profile', edit_api_v1_user_path(@user) %>
