        <tr>
            <td>DELETE</td>
            <td>/api/v1/questions/(:id)</td>
        </tr>
    </tbody>
</table>

<h3>Response</h3>
<table>
    <thead>
        <tr>
            <th>Status</th>
            <th>Response</th>
        </tr>
    </thead>
    <tbody>
