<h1>New User</h1>

<%= form_for :user, url: api_v1_users_path do |f| %>
  <div class='form-group col-md-4'>
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
  </div>

  <div class='form-group col-md-4'>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
</div>

    <%= f.submit 'Sign Up', class: 'btn btn-success' %>

<% end %>